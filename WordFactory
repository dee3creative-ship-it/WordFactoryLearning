import React, { useState, useEffect } from 'react';
import { BookOpen, Star, Sparkles, Brain, Zap, Music, Award } from 'lucide-react';

const WordFactoryApp = () => {
  const [currentScreen, setCurrentScreen] = useState('home');
  const [currentLesson, setCurrentLesson] = useState(null);
  const [score, setScore] = useState(0);
  const [stars, setStars] = useState(0);
  const [confetti, setConfetti] = useState(false);

  const showConfetti = () => {
    setConfetti(true);
    setTimeout(() => setConfetti(false), 2000);
  };

  const addStar = () => {
    setStars(prev => prev + 1);
    showConfetti();
  };

  // Adjectives and Nouns Lesson
  const AdjectivesNounsLesson = () => {
    const [currentItem, setCurrentItem] = useState(0);
    const [selectedType, setSelectedType] = useState(null);
    const [feedback, setFeedback] = useState('');

    const items = [
      { phrase: 'fuzzy bunny', adjective: 'fuzzy', noun: 'bunny', color: '#FF6B9D' },
      { phrase: 'shiny star', adjective: 'shiny', noun: 'star', color: '#FDB813' },
      { phrase: 'tall tree', adjective: 'tall', noun: 'tree', color: '#4CAF50' },
      { phrase: 'purple balloon', adjective: 'purple', noun: 'balloon', color: '#9C27B0' },
      { phrase: 'happy puppy', adjective: 'happy', noun: 'puppy', color: '#FF9800' },
    ];

    const current = items[currentItem];

    const handleSelection = (type, word) => {
      setSelectedType(type);
      const isCorrect = (type === 'adjective' && word === current.adjective) ||
                       (type === 'noun' && word === current.noun);
      
      if (isCorrect) {
        setFeedback('üåü Awesome! ' + (type === 'adjective' ? 'That describes the noun!' : 'That\'s the thing!'));
        setTimeout(() => {
          if (currentItem < items.length - 1) {
            setCurrentItem(currentItem + 1);
            setSelectedType(null);
            setFeedback('');
          } else {
            addStar();
            setScore(score + 10);
          }
        }, 1500);
      } else {
        setFeedback('ü§î Try again!');
        setTimeout(() => setFeedback(''), 1000);
      }
    };

    return (
      <div className="min-h-screen bg-gradient-to-br from-pink-200 via-purple-200 to-blue-200 p-8">
        <div className="max-w-4xl mx-auto">
          <h2 className="text-5xl font-bold text-center mb-8 text-purple-800 drop-shadow-lg">
            Adjectives & Nouns Adventure! üé®
          </h2>

          {/* Spotify Link */}
          <div className="bg-gradient-to-r from-purple-100 to-pink-100 rounded-3xl shadow-xl p-6 mb-6 border-4 border-purple-300">
            <div className="text-center">
              <Music className="inline-block text-purple-600 mb-3 animate-bounce" size={40} />
              <h3 className="text-2xl font-bold text-gray-800 mb-3">üéµ Listen to "Adjectives and Nouns"!</h3>
              <a 
                href="https://open.spotify.com/album/6TaA9PGZElKchSfPjdI0ly" 
                target="_blank" 
                rel="noopener noreferrer"
                className="inline-block bg-gradient-to-r from-purple-500 to-pink-500 text-white px-8 py-4 rounded-full text-xl font-bold hover:scale-110 transform transition-all shadow-lg hover:shadow-2xl"
              >
                üéß Play Song on Spotify
              </a>
              <p className="text-sm text-gray-600 mt-3">Opens in a new tab</p>
            </div>
          </div>
          
          <div className="bg-white rounded-3xl shadow-2xl p-12 mb-6 transform hover:scale-105 transition-transform">
            <div className="text-center mb-8">
              <div className="text-7xl mb-6 animate-bounce">{currentItem === 0 ? 'üê∞' : currentItem === 1 ? '‚≠ê' : currentItem === 2 ? 'üå≥' : currentItem === 3 ? 'üéà' : 'üêï'}</div>
              <div className="text-6xl font-bold mb-8" style={{ color: current.color }}>
                {current.phrase}
              </div>
            </div>

            <div className="mb-8 text-center">
              <p className="text-3xl text-gray-700 mb-6 px-4">
                Which word describes? Which word is the thing?
              </p>
            </div>

            <div className="grid grid-cols-2 gap-6">
              <button
                onClick={() => handleSelection('adjective', current.adjective)}
                className="bg-gradient-to-r from-yellow-400 to-orange-400 text-white p-6 rounded-2xl font-bold hover:scale-110 transform transition-all shadow-lg hover:shadow-2xl flex flex-col items-center justify-center min-h-44"
              >
                <div className="text-3xl mb-2 break-words text-center w-full">{current.adjective}</div>
                <div className="text-base mt-2 text-center">Adjective</div>
                <div className="text-sm text-center">(describes)</div>
              </button>
              <button
                onClick={() => handleSelection('noun', current.noun)}
                className="bg-gradient-to-r from-blue-400 to-indigo-400 text-white p-6 rounded-2xl font-bold hover:scale-110 transform transition-all shadow-lg hover:shadow-2xl flex flex-col items-center justify-center min-h-44"
              >
                <div className="text-3xl mb-2 break-words text-center w-full">{current.noun}</div>
                <div className="text-base mt-2 text-center">Noun</div>
                <div className="text-sm text-center">(the thing)</div>
              </button>
            </div>

            {feedback && (
              <div className="mt-8 text-center text-3xl font-bold animate-pulse">
                {feedback}
              </div>
            )}
          </div>

          <div className="flex justify-between items-center">
            <div className="text-2xl font-bold text-purple-800">
              Item {currentItem + 1} of {items.length}
            </div>
            <button
              onClick={() => setCurrentScreen('home')}
              className="bg-purple-500 text-white px-8 py-4 rounded-full text-xl font-bold hover:bg-purple-600 transition-colors"
            >
              Back to Lessons
            </button>
          </div>
        </div>
      </div>
    );
  };

  // Homonyms Lesson
  const HomonymsLesson = () => {
    const [currentPair, setCurrentPair] = useState(0);
    const [selectedWords, setSelectedWords] = useState([]);
    const [feedback, setFeedback] = useState('');

    const homonymPairs = [
      { 
        words: ['see', 'sea'], 
        sentences: ['I can SEE the ocean!', 'Let\'s swim in the SEA!'],
        emoji: 'üëÄüåä',
        color: '#00BCD4'
      },
      { 
        words: ['hear', 'here'], 
        sentences: ['Can you HEAR that?', 'Come over HERE!'],
        emoji: 'üëÇüìç',
        color: '#FF5722'
      },
      { 
        words: ['flower', 'flour'], 
        sentences: ['This FLOWER is pretty!', 'We need FLOUR for cookies!'],
        emoji: 'üå∏üç™',
        color: '#E91E63'
      },
      { 
        words: ['knight', 'night'], 
        sentences: ['The KNIGHT wore armor!', 'The stars come out at NIGHT!'],
        emoji: '‚öîÔ∏èüåô',
        color: '#9C27B0'
      },
    ];

    const current = homonymPairs[currentPair];

    const handleMatch = (word, sentenceIndex) => {
      const correctWord = sentenceIndex === 0 ? current.words[0] : current.words[1];
      
      if (word === correctWord) {
        setFeedback(`üéâ Perfect! "${word}" sounds like "${current.words[0]}" but means something different!`);
        setSelectedWords([...selectedWords, word]);
        
        setTimeout(() => {
          if (selectedWords.length === 0) {
            setFeedback('');
          } else {
            if (currentPair < homonymPairs.length - 1) {
              setCurrentPair(currentPair + 1);
              setSelectedWords([]);
              setFeedback('');
            } else {
              addStar();
              setScore(score + 15);
            }
          }
        }, 2000);
      } else {
        setFeedback('ü§î Not quite! These words SOUND the same but mean different things!');
        setTimeout(() => setFeedback(''), 1500);
      }
    };

    return (
      <div className="min-h-screen bg-gradient-to-br from-cyan-200 via-blue-200 to-purple-200 p-8">
        <div className="max-w-5xl mx-auto">
          <h2 className="text-5xl font-bold text-center mb-8 text-blue-800 drop-shadow-lg">
            Homonym Match Game! üé≠
          </h2>

          {/* Spotify Link */}
          <div className="bg-gradient-to-r from-blue-100 to-cyan-100 rounded-3xl shadow-xl p-6 mb-6 border-4 border-blue-300">
            <div className="text-center">
              <Music className="inline-block text-blue-600 mb-3 animate-bounce" size={40} />
              <h3 className="text-2xl font-bold text-gray-800 mb-3">üéµ Listen to "Homonyms"!</h3>
              <a 
                href="https://open.spotify.com/track/6svjHCijoagOja6A7P2pvG" 
                target="_blank" 
                rel="noopener noreferrer"
                className="inline-block bg-gradient-to-r from-blue-500 to-cyan-500 text-white px-8 py-4 rounded-full text-xl font-bold hover:scale-110 transform transition-all shadow-lg hover:shadow-2xl"
              >
                üéß Play Song on Spotify
              </a>
              <p className="text-sm text-gray-600 mt-3">Opens in a new tab</p>
            </div>
          </div>
          
          <div className="bg-white rounded-3xl shadow-2xl p-12 mb-6">
            <div className="text-center mb-8">
              <div className="text-7xl mb-4">{current.emoji}</div>
              <div className="text-3xl text-gray-700 mb-6 leading-relaxed px-4">
                These words SOUND the same but mean different things!
              </div>
            </div>

            <div className="grid grid-cols-1 gap-6 mb-8">
              {current.sentences.map((sentence, index) => (
                <div key={index} className="bg-gradient-to-r from-blue-50 to-purple-50 p-6 rounded-2xl border-4 border-blue-300">
                  <p className="text-3xl mb-4 text-center font-semibold">{sentence}</p>
                  <div className="flex justify-center gap-4">
                    {current.words.map(word => (
                      <button
                        key={word}
                        onClick={() => handleMatch(word, index)}
                        disabled={selectedWords.includes(word)}
                        className={`px-8 py-4 rounded-xl text-2xl font-bold transition-all transform hover:scale-110 ${
                          selectedWords.includes(word)
                            ? 'bg-green-400 text-white'
                            : 'bg-yellow-400 hover:bg-yellow-500 text-gray-800'
                        }`}
                      >
                        {word}
                      </button>
                    ))}
                  </div>
                </div>
              ))}
            </div>

            {feedback && (
              <div className="mt-6 text-center text-xl font-bold p-6 bg-blue-100 rounded-2xl animate-pulse break-words">
                {feedback}
              </div>
            )}
          </div>

          <div className="flex justify-between items-center">
            <div className="text-2xl font-bold text-blue-800">
              Pair {currentPair + 1} of {homonymPairs.length}
            </div>
            <button
              onClick={() => setCurrentScreen('home')}
              className="bg-blue-500 text-white px-8 py-4 rounded-full text-xl font-bold hover:bg-blue-600 transition-colors"
            >
              Back to Lessons
            </button>
          </div>
        </div>
      </div>
    );
  };

  // Collective Nouns Lesson
  const CollectiveNounsLesson = () => {
    const [currentQuestion, setCurrentQuestion] = useState(0);
    const [showAnswer, setShowAnswer] = useState(false);

    const collectiveNouns = [
      { 
        animal: 'crows', 
