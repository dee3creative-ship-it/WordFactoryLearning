  // Palindromes Lesson
  const PalindromesLesson = () => {
    const [currentWord, setCurrentWord] = useState(0);
    const [isReversed, setIsReversed] = useState(false);

    const palindromes = [
      { word: 'racecar', emoji: 'üèéÔ∏è', color: '#F44336' },
      { word: 'kayak', emoji: 'üõ∂', color: '#2196F3' },
      { word: 'level', emoji: 'üìè', color: '#4CAF50' },
      { word: 'noon', emoji: 'üåû', color: '#FFC107' },
      { word: 'radar', emoji: 'üì°', color: '#9C27B0' },
      { word: 'mom', emoji: 'üë©', color: '#E91E63' },
    ];

    const current = palindromes[currentWord];

    const flipWord = () => {
      setIsReversed(!isReversed);
    };

    const nextWord = () => {
      if (currentWord < palindromes.length - 1) {
        setCurrentWord(currentWord + 1);
        setIsReversed(false);
      } else {
        addStar();
        setScore(score + 10);
      }
    };

    return (
      <div className="min-h-screen bg-gradient-to-br from-purple-200 via-pink-200 to-red-200 p-8">
        <div className="max-w-4xl mx-auto">
          <h2 className="text-5xl font-bold text-center mb-8 text-purple-800 drop-shadow-lg">
            Palindrome Flipper! üîÑ
          </h2>

          {/* Spotify Link */}
          <div className="bg-gradient-to-r from-purple-100 to-pink-100 rounded-3xl shadow-xl p-6 mb-6 border-4 border-purple-300">
            <div className="text-center">
              <Music className="inline-block text-purple-600 mb-3 animate-bounce" size={40} />
              <h3 className="text-2xl font-bold text-gray-800 mb-3">üéµ Listen to "Madam, I'm Adam"!</h3>
              <a 
                href="https://open.spotify.com/album/6TaA9PGZElKchSfPjdI0ly" 
                target="_blank" 
                rel="noopener noreferrer"
                className="inline-block bg-gradient-to-r from-purple-500 to-pink-500 text-white px-8 py-4 rounded-full text-xl font-bold hover:scale-110 transform transition-all shadow-lg hover:shadow-2xl"
              >
                üéß Play Song on Spotify
              </a>
              <p className="text-sm text-gray-600 mt-3">Opens in a new tab</p>
            </div>
          </div>
          
          <div className="bg-white rounded-3xl shadow-2xl p-12 mb-6">
            <div className="text-center mb-8">
              <p className="text-3xl text-gray-700 mb-6 leading-relaxed px-4">
                Palindromes spell the SAME forwards AND backwards!
              </p>
              <div className="text-8xl mb-8">{current.emoji}</div>
            </div>

            <div className="bg-gradient-to-r from-blue-100 to-purple-100 p-12 rounded-3xl mb-8 border-4 border-purple-300">
              <div 
                className="text-8xl font-bold text-center mb-4 transition-all duration-500 transform"
                style={{ 
                  color: current.color,
                  transform: isReversed ? 'rotateY(180deg)' : 'rotateY(0deg)'
                }}
              >
                {isReversed ? current.word.split('').reverse().join('') : current.word}
              </div>
              <div className="text-2xl text-center text-gray-600">
                {isReversed ? 'Backwards!' : 'Forwards!'}
              </div>
            </div>

            <div className="grid grid-cols-2 gap-6">
              <button
                onClick={flipWord}
                className="bg-gradient-to-r from-purple-400 to-pink-400 text-white p-8 rounded-2xl text-3xl font-bold hover:scale-110 transform transition-all shadow-lg"
              >
                üîÑ Flip It!
              </button>
              <button
                onClick={nextWord}
                className="bg-gradient-to-r from-green-400 to-blue-400 text-white p-8 rounded-2xl text-3xl font-bold hover:scale-110 transform transition-all shadow-lg"
              >
                Next Word ‚û°Ô∏è
              </button>
            </div>
          </div>

          <div className="flex justify-between items-center">
            <div className="text-2xl font-bold text-purple-800">
              Word {currentWord + 1} of {palindromes.length}
            </div>
            <button
              onClick={() => setCurrentScreen('home')}
              className="bg-purple-500 text-white px-8 py-4 rounded-full text-xl font-bold hover:bg-purple-600 transition-colors"
            >
              Back to Lessons
            </button>
          </div>
        </div>
      </div>
    );
  };

  // Prepositions Lesson
  const PrepositionsLesson = () => {
    const [currentScene, setCurrentScene] = useState(0);
    const [ballPosition, setBallPosition] = useState('on');

    const scenes = [
      { preposition: 'on', emoji: '‚öΩ', description: 'The ball is ON the table' },
      { preposition: 'under', emoji: '‚öΩ', description: 'The ball is UNDER the table' },
      { preposition: 'beside', emoji: '‚öΩ', description: 'The ball is BESIDE the table' },
      { preposition: 'behind', emoji: '‚öΩ', description: 'The ball is BEHIND the table' },
      { preposition: 'in', emoji: '‚öΩ', description: 'The ball is IN the box' },
    ];

    const current = scenes[currentScene];

    const getPositionStyle = () => {
      switch (current.preposition) {
        case 'on': return { top: '-60px', left: '50%', transform: 'translateX(-50%)' };
        case 'under': return { bottom: '-60px', left: '50%', transform: 'translateX(-50%)' };
        case 'beside': return { top: '50%', right: '-80px', transform: 'translateY(-50%)' };
        case 'behind': return { top: '50%', left: '-80px', transform: 'translateY(-50%)' };
        case 'in': return { top: '50%', left: '50%', transform: 'translate(-50%, -50%)' };
        default: return {};
      }
    };

    return (
      <div className="min-h-screen bg-gradient-to-br from-orange-200 via-yellow-200 to-amber-200 p-8">
        <div className="max-w-4xl mx-auto">
          <h2 className="text-5xl font-bold text-center mb-8 text-orange-800 drop-shadow-lg">
            Preposition Station! üìç
          </h2>

          {/* Spotify Link */}
          <div className="bg-gradient-to-r from-orange-100 to-yellow-100 rounded-3xl shadow-xl p-6 mb-6 border-4 border-orange-300">
            <div className="text-center">
              <Music className="inline-block text-orange-600 mb-3 animate-bounce" size={40} />
              <h3 className="text-2xl font-bold text-gray-800 mb-3">üéµ Listen to "Preposition Blues"!</h3>
              <a 
                href="https://open.spotify.com/album/6TaA9PGZElKchSfPjdI0ly" 
                target="_blank" 
                rel="noopener noreferrer"
                className="inline-block bg-gradient-to-r from-orange-500 to-yellow-500 text-white px-8 py-4 rounded-full text-xl font-bold hover:scale-110 transform transition-all shadow-lg hover:shadow-2xl"
              >
                üéß Play Song on Spotify
              </a>
              <p className="text-sm text-gray-600 mt-3">Opens in a new tab</p>
            </div>
          </div>
          
          <div className="bg-white rounded-3xl shadow-2xl p-12 mb-6">
            <div className="text-center mb-12">
              <p className="text-3xl text-gray-700 mb-4 leading-relaxed px-4">
                Prepositions show WHERE things are!
              </p>
              <div className="text-4xl font-bold text-orange-600 break-words px-4">
                {current.description}
              </div>
            </div>

            <div className="flex justify-center items-center mb-12" style={{ minHeight: '400px' }}>
              <div className="relative">
                {current.preposition === 'in' ? (
                  <div className="w-64 h-64 bg-gradient-to-br from-amber-400 to-orange-500 rounded-2xl shadow-2xl flex items-center justify-center border-8 border-amber-600">
                    <div className="text-8xl">{current.emoji}</div>
                  </div>
                ) : (
                  <>
                    <div className="w-64 h-48 bg-gradient-to-br from-amber-600 to-orange-700 rounded-2xl shadow-2xl border-8 border-amber-800"></div>
                    <div 
                      className="absolute text-8xl transition-all duration-700 ease-in-out"
                      style={getPositionStyle()}
                    >
                      {current.emoji}
                    </div>
                  </>
                )}
              </div>
            </div>

            <button
              onClick={() => {
                if (currentScene < scenes.length - 1) {
                  setCurrentScene(currentScene + 1);
                } else {
                  addStar();
                  setScore(score + 10);
                }
              }}
              className="w-full bg-gradient-to-r from-orange-400 to-red-400 text-white p-8 rounded-2xl text-4xl font-bold hover:scale-105 transform transition-all shadow-lg"
            >
              Next Position! ‚û°Ô∏è
            </button>
          </div>

          <div className="flex justify-between items-center">
            <div className="text-2xl font-bold text-orange-800">
              Position {currentScene + 1} of {scenes.length}
            </div>
            <button
              onClick={() => setCurrentScreen('home')}
              className="bg-orange-500 text-white px-8 py-4 rounded-full text-xl font-bold hover:bg-orange-600 transition-colors"
            >
              Back to Lessons
            </button>
          </div>
        </div>
      </div>
    );
  };

  // Pronouns Lesson
  const PronounsLesson = () => {
    const [currentSentence, setCurrentSentence] = useState(0);
    const [selectedPronoun, setSelectedPronoun] = useState(null);

    const sentences = [
      { 
        original: 'Sarah loves ice cream',
        pronoun: 'She',
        result: 'SHE loves ice cream',
        emoji: 'üëß',
        color: '#E91E63'
      },
      { 
        original: 'The dog is barking',
        pronoun: 'It',
        result: 'IT is barking',
        emoji: 'üêï',
        color: '#FF9800'
      },
      { 
        original: 'Tom and I are friends',
        pronoun: 'We',
        result: 'WE are friends',
        emoji: 'üë´',
        color: '#2196F3'
      },
      { 
        original: 'The kids are playing',
        pronoun: 'They',
        result: 'THEY are playing',
        emoji: 'üë∂üëßüë¶',
        color: '#4CAF50'
      },
    ];

    const pronounOptions = ['He', 'She', 'It', 'We', 'They', 'You'];
    const current = sentences[currentSentence];

    const handlePronounSelect = (pronoun) => {
      setSelectedPronoun(pronoun);
      setTimeout(() => {
        if (pronoun === current.pronoun) {
          if (currentSentence < sentences.length - 1) {
            setCurrentSentence(currentSentence + 1);
            setSelectedPronoun(null);
          } else {
            addStar();
            setScore(score + 15);
          }
        } else {
          setSelectedPronoun(null);
        }
      }, 1500);
    };

    return (
      <div className="min-h-screen bg-gradient-to-br from-indigo-200 via-purple-200 to-pink-200 p-8">
        <div className="max-w-4xl mx-auto">
          <h2 className="text-5xl font-bold text-center mb-8 text-indigo-800 drop-shadow-lg">
            Pronoun Power! üí™
          </h2>

          {/* Spotify Link */}
          <div className="bg-gradient-to-r from-indigo-100 to-purple-100 rounded-3xl shadow-xl p-6 mb-6 border-4 border-indigo-300">
            <div className="text-center">
              <Music className="inline-block text-indigo-600 mb-3 animate-bounce" size={40} />
              <h3 className="text-2xl font-bold text-gray-800 mb-3">üéµ Listen to "I'm A Pronoun"!</h3>
              <a 
                href="https://open.spotify.com/album/6TaA9PGZElKchSfPjdI0ly" 
                target="_blank" 
                rel="noopener noreferrer"
                className="inline-block bg-gradient-to-r from-indigo-500 to-purple-500 text-white px-8 py-4 rounded-full text-xl font-bold hover:scale-110 transform transition-all shadow-lg hover:shadow-2xl"
              >
                üéß Play Song on Spotify
              </a>
              <p className="text-sm text-gray-600 mt-3">Opens in a new tab</p>
            </div>
          </div>
          
          <div className="bg-white rounded-3xl shadow-2xl p-12 mb-6">
            <div className="text-center mb-8">
              <p className="text-3xl text-gray-700 mb-6 leading-relaxed px-4">
                Pronouns take the place of nouns!
              </p>
              <div className="text-8xl mb-6">{current.emoji}</div>
              <div className="text-4xl font-bold mb-8 break-words px-4" style={{ color: current.color }}>
                {current.original}
              </div>
              <p className="text-3xl text-gray-600 mb-6 leading-relaxed px-4">
                Which pronoun can replace the noun?
              </p>
            </div>

            {selectedPronoun && (
              <div className="mb-8 text-center">
                <div className={`text-4xl font-bold p-6 rounded-2xl ${
                  selectedPronoun === current.pronoun 
                    ? 'bg-green-200 text-green-800' 
                    : 'bg-red-200 text-red-800'
                }`}>
                  {selectedPronoun === current.pronoun ? 'üéâ ' + current.result : '‚ùå Try again!'}
                </div>
              </div>
            )}

            <div className="grid grid-cols-3 gap-4">
              {pronounOptions.map(pronoun => (
                <button
                  key={pronoun}
                  onClick={() => handlePronounSelect(pronoun)}
                  disabled={selectedPronoun !== null}
                  className="bg-gradient-to-br from-purple-400 to-pink-400 text-white p-6 rounded-2xl text-3xl font-bold hover:scale-110 transform transition-all shadow-lg disabled:opacity-50"
                >
                  {pronoun}
                </button>
              ))}
            </div>
          </div>

          <div className="flex justify-between items-center">
            <div className="text-2xl font-bold text-indigo-800">
              Sentence {currentSentence + 1} of {sentences.length}
            </div>
            <button
              onClick={() => setCurrentScreen('home')}
              className="bg-indigo-500 text-white px-8 py-4 rounded-full text-xl font-bold hover:bg-indigo-600 transition-colors"
            >
              Back to Lessons
            </button>
          </div>
        </div>
      </div>
    );
  };

  const lessons = [
    {
      id: 'adjectives-nouns',
      title: 'Adjectives & Nouns',
      icon: 'üé®',
      color: 'from-pink-400 to-purple-400',
      description: 'Learn which words describe and which words are things!',
      component: AdjectivesNounsLesson
    },
    {
      id: 'pronouns',
      title: 'Pronouns',
      icon: 'üí™',
      color: 'from-indigo-400 to-purple-400',
      description: 'Discover words that take the place of nouns!',
      component: PronounsLesson
    },
    {
      id: 'homonyms',
      title: 'Homonyms',
      icon: 'üé≠',
      color: 'from-blue-400 to-cyan-400',
      description: 'Words that sound the same but mean different things!',
      component: HomonymsLesson
    },
    {
      id: 'collective-nouns',
      title: 'Collective Nouns',
      icon: 'ü¶Å',
      color: 'from-green-400 to-emerald-400',
      description: 'Special names for groups of animals!',
      component: CollectiveNounsLesson
    },
    {
      id: 'palindromes',
      title: 'Palindromes',
      icon: 'üîÑ',
      color: 'from-purple-400 to-pink-400',
      description: 'Words that spell the same forwards and backwards!',
      component: PalindromesLesson
    },
    {
      id: 'prepositions',
      title: 'Prepositions',
      icon: 'üìç',
      color: 'from-orange-400 to-yellow-400',
      description: 'Words that show where things are!',
      component: PrepositionsLesson
    },
  ];

  const HomeScreen = () => {
    return (
      <div className="min-h-screen bg-gradient-to-br from-blue-300 via-purple-300 to-pink-300 p-8 relative overflow-hidden">
        {/* Floating shapes background */}
        <div className="absolute inset-0 overflow-hidden pointer-events-none">
          <div className="absolute top-10 left-10 w-20 h-20 bg-yellow-300 rounded-full opacity-50 animate-bounce"></div>
          <div className="absolute top-40 right-20 w-16 h-16 bg-pink-300 rotate-45 opacity-50 animate-pulse"></div>
          <div className="absolute bottom-20 left-1/4 w-24 h-24 bg-blue-300 rounded-full opacity-50 animate-bounce"></div>
          <div className="absolute top-1/2 right-10 w-20 h-20 bg-green-300 rotate-45 opacity-50 animate-pulse"></div>
        </div>

        <div className="max-w-6xl mx-auto relative z-10">
          {/* Header */}
          <div className="text-center mb-12 px-4">
            <h1 className="text-7xl font-bold mb-4 text-white drop-shadow-2xl break-words">
              üéµ The Word Factory! üè≠
            </h1>
            <p className="text-3xl text-white drop-shadow-lg break-words">
              Learn language through music and fun!
            </p>
            
            {/* Score Display */}
            <div className="mt-8 flex justify-center gap-8">
              <div className="bg-white rounded-3xl px-8 py-4 shadow-xl">
                <div className="text-2xl text-gray-600">Stars Earned</div>
                <div className="text-5xl font-bold text-yellow-500 flex items-center justify-center gap-2">
                  <Star className="fill-yellow-500" size={48} />
                  {stars}
                </div>
              </div>
              <div className="bg-white rounded-3xl px-8 py-4 shadow-xl">
                <div className="text-2xl text-gray-600">Total Score</div>
                <div className="text-5xl font-bold text-purple-600 flex items-center justify-center gap-2">
                  <Award size={48} />
                  {score}
                </div>
              </div>
            </div>
          </div>

          {/* Lessons Grid */}
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
            {lessons.map(lesson => (
              <button
                key={lesson.id}
                onClick={() => {
                  setCurrentLesson(lesson.id);
                  setCurrentScreen('lesson');
                }}
                className="group relative bg-white rounded-3xl shadow-2xl p-8 hover:scale-105 transform transition-all duration-300 overflow-hidden"
              >
                <div className={`absolute inset-0 bg-gradient-to-br ${lesson.color} opacity-0 group-hover:opacity-20 transition-opacity`}></div>
                
                <div className="relative z-10">
                  <div className="text-7xl mb-4 group-hover:scale-110 transition-transform">
                    {lesson.icon}
                  </div>
                  <h3 className="text-3xl font-bold mb-3 text-gray-800 break-words">
                    {lesson.title}
                  </h3>
                  <p className="text-xl text-gray-600 mb-4 leading-relaxed break-words">
                    {lesson.description}
                  </p>
                  <div className={`inline-flex items-center gap-2 px-6 py-3 rounded-full bg-gradient-to-r ${lesson.color} text-white font-bold text-lg`}>
                    Start Learning! <Sparkles size={20} />
                  </div>
                </div>
              </button>
            ))}
          </div>

          {/* Spotify Featured Album */}
          <div className="mt-12 mb-12 bg-gradient-to-br from-purple-100 via-pink-100 to-blue-100 rounded-3xl shadow-2xl p-8 border-4 border-purple-300">
            <div className="text-center">
              <div className="flex items-center justify-center gap-4 mb-4 flex-wrap">
                <Music className="text-purple-600 animate-bounce" size={48} />
                <h2 className="text-4xl font-bold text-gray-800">Listen to The Word Factory Album!</h2>
                <Sparkles className="text-yellow-500 animate-pulse" size={48} />
              </div>
              <p className="text-xl text-gray-600 mb-6 break-words px-4">
                Enjoy Dan Crow's educational songs while you learn!
              </p>
              <a 
                href="https://open.spotify.com/album/6TaA9PGZElKchSfPjdI0ly" 
                target="_blank" 
                rel="noopener noreferrer"
                className="inline-block bg-gradient-to-r from-green-500 via-blue-500 to-purple-500 text-white px-12 py-6 rounded-full text-2xl font-bold hover:scale-110 transform transition-all shadow-lg hover:shadow-2xl mb-4"
              >
                üéµ Open Full Album on Spotify
              </a>
              <p className="text-sm text-gray-600">Opens in a new tab ‚Ä¢ All songs from The Word Factory</p>
            </div>
          </div>

          {/* Fun Facts Section */}
          <div className="mt-16 bg-white rounded-3xl shadow-2xl p-8">
            <div className="flex items-center justify-center gap-4 mb-6 flex-wrap px-4">
              <Music className="text-purple-600" size={48} />
              <h2 className="text-4xl font-bold text-gray-800 break-words text-center">Learning Through Music!</h2>
              <Brain className="text-blue-600" size={48} />
            </div>
            <p className="text-2xl text-center text-gray-600 leading-relaxed break-words px-4">
              Click on any lesson above to start your word adventure! üöÄ
            </p>
          </div>
        </div>

        {/* Confetti Effect */}
        {confetti && (
          <div className="fixed inset-0 pointer-events-none z-50">
            {[...Array(50)].map((_, i) => (
              <div
                key={i}
                className="absolute text-4xl animate-ping"
                style={{
                  left: `${Math.random() * 100}%`,
                  top: `${Math.random() * 100}%`,
                  animationDelay: `${Math.random() * 0.5}s`,
                  animationDuration: '1s'
                }}
              >
                {['‚≠ê', 'üéâ', '‚ú®', 'üåü'][Math.floor(Math.random() * 4)]}
              </div>
            ))}
          </div>
        )}
      </div>
    );
  };

  // Render appropriate screen
  if (currentScreen === 'home') {
    return <HomeScreen />;
  }

  if (currentScreen === 'lesson') {
    const lesson = lessons.find(l => l.id === currentLesson);
    if (lesson && lesson.component) {
      const LessonComponent = lesson.component;
      return <LessonComponent />;
    }
  }

  return <HomeScreen />;
};

export default WordFactoryApp;
