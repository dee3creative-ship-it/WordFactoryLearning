      },
      { 
        animal: 'fish', 
        collective: 'school', 
        emoji: 'üêü',
        fact: 'Fish swim together in a SCHOOL!',
        color: '#00BCD4'
      },
      { 
        animal: 'geese', 
        collective: 'gaggle', 
        emoji: 'ü¶Ü',
        fact: 'Geese honk around in a GAGGLE!',
        color: '#8BC34A'
      },
      { 
        animal: 'lions', 
        collective: 'pride', 
        emoji: 'ü¶Å',
        fact: 'Lions live together in a PRIDE!',
        color: '#FF9800'
      },
      { 
        animal: 'bees', 
